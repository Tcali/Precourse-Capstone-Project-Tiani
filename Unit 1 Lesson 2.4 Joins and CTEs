-- What are the three longest trips on rainy days?
--my attempt
WITH longest
AS (
	SELECT 
	 trip_id,
	 MAX (duration) duration,
	 zip_code
FROM
	trips t
GROUP BY 1
)
SELECT 
	l.trip_id,
	l.duration,
	l.zip_code
FROM 
	longest l
SELECT 
	ZIP,
	events
CASE 
WHEN events LIKE 'rain'
THEN 'rained'
ELSE 'did not rain' 
END
FROM 
	weather w
JOIN
    longest
ON
    w.ZIP = l.zip_code
GROUP BY 1

--if I did the sample solutions but changed the order, it DOESNT work. why?
SELECT
trip_id,
duration,
DATE(start_date) trip_date
FROM trips

with rainy as 
(SELECT 
date
From weather
WHERE events = 'Rain'
GROUP BY 1
)

JOIN rainy
on rainy.date = trip_date
ORDER BY duration DESC
LIMIT 3

--but this works
with rainy as 
(SELECT 
date
From weather
WHERE events = 'Rain'
GROUP BY 1
)

SELECT
trip_id,
duration,
DATE(start_date) trip_date
FROM trips
JOIN rainy
on rainy.date = trip_date
ORDER BY duration DESC
LIMIT 3

-- Which station is full most often?
SELECT 
	status_abbreviated.station_id,
	stations.name,
	COUNT(CASE WHEN docks_available = 0 THEN 1 END) full_dock
FROM 
	status_abbreviated
JOIN 
	stations
ON
	stations.station_id = status_abbreviated.station_id
ORDER BY full_dock DESC
LIMIT 1

--is not the same as the answer given, which throws an error or doesn't allow me to try (freezes window)
SELECT
status.station_id,
stations.name,
COUNT(CASE WHEN docks_available=0 then 1 END) empty_count
FROM status
JOIN stations
on stations.station_id = status.station_id
GROUP BY 1
ORDER BY empty_count DESC

-- Return a list of stations with a count of number of trips starting at that station but ordered by dock count.
SELECT
start_station,
dockcount,
COUNT(*)
FROM trips
JOIN stations
ON stations.name = trips.start_station
GROUP BY 1
ORDER BY 2 DESC 

-- (Challenge) What's the length of the longest trip for each day it rains anywhere?
SELECT
trip_id,
duration,
DATE(start_date) trip_date
FROM trips
JOIN rainy
on rainy.date = trip_date
ORDER BY duration DESC

  
